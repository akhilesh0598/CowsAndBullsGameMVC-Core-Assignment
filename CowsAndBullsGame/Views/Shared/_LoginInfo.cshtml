@inject SignInManager<ApplicationUser> _signInManager
@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark mr-sm-2" href="#" id="navbardown" role="button"
           data-toggle="dropdown">
            Hello @User.Identity.Name
        </a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-action="Logout" asp-controller="Account">
                Logout
            </a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark  mr-sm-2 btn btn-info" asp-area="" asp-controller="Account" asp-action="SignUp">SignUp</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark  my-2 my-sm-0" asp-area="" asp-controller="Account" asp-action="SignIn">LogIn</a>
    </li>
}


